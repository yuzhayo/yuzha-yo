{
  "name": "yuzha-monorepo",
  "private": true,
  "type": "module",
  "version": "0.1.0",
  "description": "Monorepo apps (Launcher + modules) with shared hub. OPSI 3: multi-URL, local-only data store.",
  "engines": {
    "node": ">=20"
  },
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "echo Pilih app: npm run dev:launcher atau dev:modul",
    "dev:launcher": "npm run dev -w apps/Launcher",
    "dev:0setting": "npm run dev -w apps/0Setting",
    "dev:1meng": "npm run dev -w apps/1Meng",
    "dev:3database": "npm run dev -w apps/3Database",
    "dev:4extra": "npm run dev -w apps/4Extra",
    "dev:5rara": "npm run dev -w apps/5Rara",
    "dev:all": "concurrently \"npm run dev:launcher\" \"npm run dev:0setting\" \"npm run dev:1meng\" \"npm run dev:3database\" \"npm run dev:4extra\" \"npm run dev:5rara\"",
    "build": "echo Pilih app: npm run build:launcher (atau build:<modul>)",
    "build:launcher": "npm run build -w apps/Launcher",
    "build:0setting": "npm run build -w apps/0Setting",
    "build:1meng": "npm run build -w apps/1Meng",
    "build:3database": "npm run build -w apps/3Database",
    "build:4extra": "npm run build -w apps/4Extra",
    "build:5rara": "npm run build -w apps/5Rara",
    "build:all": "concurrently \"npm run build:launcher\" \"npm run build:0setting\" \"npm run build:1meng\" \"npm run build:3database\" \"npm run build:4extra\" \"npm run build:5rara\"",
    "clean": "rimraf apps/**/dist apps/**/node_modules/.vite",
    "typecheck:launcher": "npm run typecheck -w apps/Launcher",
    "typecheck:all": "npm run typecheck:launcher",
    "ci:verify": "npm run typecheck && npm run lint && npm run test && npm run build:launcher",
    "typecheck": "tsc --noEmit -p tsconfig.base.json",
    "lint": "eslint apps/**/src/**/*.{ts,tsx} --cache --max-warnings=0",
    "lint:fix": "eslint apps/**/src/**/*.{ts,tsx} --cache --fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:cov": "vitest run --coverage",
    "prepare": "husky"
  },
  "devDependencies": {
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/line-clamp": "^0.4.4",
    "@tailwindcss/typography": "^0.5.10",
    "@types/react": "^18.3.7",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "^10.4.20",
    "concurrently": "^8.2.2",
    "cross-env": "^10.0.0",
    "eslint": "^9.35.0",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "jsdom": "^27.0.0",
    "lint-staged": "^16.1.6",
    "postcss": "^8.4.47",
    "prettier": "^3.6.2",
    "rimraf": "^5.0.5",
    "tailwindcss": "^3.4.17",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3",
    "vite": "^7.0.4",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "**/*.{ts,tsx}": [
      "eslint --fix"
    ],
    "**/*.{js,jsx,css,md,json}": [
      "prettier --write"
    ]
  }
}
