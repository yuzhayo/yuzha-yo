{
  "name": "yuzha-yo",
  "private": true,
  "type": "module",
  "version": "0.1.0",
  "description": "Monorepo for Yuzha Yo base tooling (no app logic).",
  "engines": {
    "node": ">=20"
  },
  "workspaces": [
    "apps/*",
    "Launcher"
  ],
  "scripts": {
    "dev": "npm run dev:launcher",
    "dev:launcher": "npm run dev --workspace Launcher",
    "dev:meng": "npm run dev --workspace apps/meng",
    "dev:all": "concurrently \"npm:dev:launcher\" \"npm:dev:meng\"",
    "build": "npm run build:launcher && npm run build:meng",
    "build:launcher": "npm run build --workspace Launcher",
    "build:meng": "npm run build --workspace apps/meng",
    "clean": "rimraf \"Launcher/dist\" \"Launcher/node_modules/.vite\" \"apps/**/dist\" \"apps/**/node_modules/.vite\"",
    "typecheck": "tsc --noEmit -p tsconfig.base.json",
    "typecheck:launcher": "npm run typecheck --workspace Launcher",
    "typecheck:meng": "npm run typecheck --workspace apps/meng",
    "ci:verify": "npm run lint && npm run typecheck && npm run test && npm run build",
    "lint": "eslint \"Launcher/src/**/*.{ts,tsx}\" \"apps/**/src/**/*.{ts,tsx}\" --cache --no-error-on-unmatched-pattern --max-warnings=0",
    "lint:fix": "eslint \"Launcher/src/**/*.{ts,tsx}\" \"apps/**/src/**/*.{ts,tsx}\" --cache --no-error-on-unmatched-pattern --fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest --passWithNoTests",
    "test:cov": "vitest run --passWithNoTests --coverage"
  },
  "devDependencies": {
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/line-clamp": "^0.4.4",
    "@tailwindcss/typography": "^0.5.10",
    "@types/react": "^18.3.7",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "^10.4.20",
    "concurrently": "^8.2.2",
    "eslint": "^9.35.0",
    "globals": "^16.4.0",
    "jsdom": "^27.0.0",
    "postcss": "^8.4.47",
    "prettier": "^3.6.2",
    "rimraf": "^5.0.5",
    "tailwindcss": "^3.4.17",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3",
    "vite": "^7.0.4",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@react-three/fiber": "^9.3.0",
    "@types/three": "^0.180.0",
    "three": "^0.180.0"
  }
}
